# Import pandas library
import pandas as pd

# Create a list of row labels
rows = ["Fuel Cell powertrains", "Electric traction motor powertrains", "Thermal Powertrains", "Hybrid Powertrains"]

# Create a list of column labels
columns = ["Operating principles", "Key components", "Advantages", "Disadvantages"]

# Create an empty dataframe with the row and column labels
df = pd.DataFrame(index=rows, columns=columns)

# Save the dataframe as an excel file
df.to_excel("powertrains.xlsx")
